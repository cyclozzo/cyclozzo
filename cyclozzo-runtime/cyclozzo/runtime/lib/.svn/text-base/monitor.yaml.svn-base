#email notifications settings
smtp_host: owa.k7computing.com
smtp_port: 25
email_from: cyclozzo_monitor@k7computing.com

#log and pid files folder
logdir: /var/cyclozzo/logs

#list of emails to notify about status changes
receivers:
    - syudin@k7computing.com

#list of services to monitor used as {logdir}/{name}.pid
monitor: 
    - master
    - stats
    - dhcp

#period to check status in seconds
period: 10
